{
    "name": "rUv Dev Environment",
    "postStartCommand": "node server.js &",
    "postAttachCommand": {
        "server": "node server.js &"
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-vscode.live-preview"
            ]
        }
    },
    "forwardPorts": [3000, 3001, 3002, 3003, 3004, 3005],
    "portsAttributes": {
        "3000-3005": {
            "label": "Preview Server",
            "onAutoForward": "notify",
            "protocol": "http",
            "visibility": "public"
        }
    },
    "otherPortsAttributes": {
        "onAutoForward": "notify",
        "visibility": "public"
    }
}
